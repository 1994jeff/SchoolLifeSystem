<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/leftTalk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/talk_padding"
        android:gravity="left"
        android:visibility="gone">

        <TextView
            android:id="@+id/leftTalkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:paddingRight="@dimen/talk_padding"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/talk_text_size"/>

        <TextView
            android:id="@+id/leftTalkContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/talk_text_shape"
            android:gravity="left"
            android:padding="@dimen/talk_padding"
            android:text="hah"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightTalk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/talk_padding"
        android:visibility="gone"
        android:gravity="right"
        >

        <TextView
            android:id="@+id/rightTalkContent"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/talk_text_shape"
            android:padding="@dimen/talk_padding"
            android:text="@string/talk"/>

        <TextView
            android:id="@+id/rightTalkName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/talk_text_size"
            android:textColor="@color/colorPrimary"
            android:paddingLeft="@dimen/talk_padding"
            android:text="@string/name"/>
    </LinearLayout>

</LinearLayout>
