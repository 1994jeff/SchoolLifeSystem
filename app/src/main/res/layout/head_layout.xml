<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >

    <LinearLayout
        android:id="@+id/mainHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/myFun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layer_text_bottom_bg"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/head_text_padding"
                android:text="@string/my_function"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/schoolLife"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layer_head_bg"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/head_text_padding"
                android:text="@string/school_info"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragmentHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/title"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/head_text_padding"
            />

    </LinearLayout>

</RelativeLayout>
